<% if(message.length > 0) { %>
    <div  class="w-50 mx-auto alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %> 
<% if (Blogs.length > 0) { %>
    <h2 class="mt-2">آخرین پست ها</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>تاریخ</th>
                    <th>وضعیت</th>
                    <th>تست</th>
                </tr>
            </thead>
            <tbody>
                <% for (let blog of Blogs) { %>
                <tr>
                    <td><%= blog.number %> </td>
                    <td><a href="/singlePost/<%= blog._id %>"><%= blog.title %> </a></td>
                    <td><%= convertDate(blog.createdAt) %></td>
                    <td>
                        <span class="badge <%= blog.status === "public" ? 'badge-success' : 'badge-warning' %>">
                            <%= blog.status === "public" ? "عمومی" :"خصوصی" %>
                        </span>
                    </td>
                    <td>
                        <a href="/dashboard/delete/<%= blog._id %>">حذف</a>
                        <a href="/dashboard/edit-post/<%= blog._id %>">ویرایش</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <%- include ('../includes/pagination.ejs') %> 
    </div>
    <% } else { %>
    <div class="text-center">
        <h3 class="mt-2">
            در حال حاضر هیچ پستی توسط شما ثبت نشده است
        </h3>
    </div>
    <% } %>
    